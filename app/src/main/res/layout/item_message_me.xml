<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="40dp"
        android:background="@color/primary"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/tv_textMessage"
            style="@style/TextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:text="Мне кажется, достойное завершение. Кто бы что ни говорил, а мне понравилось."
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_textInfoAboutMessage"
            style="@style/TextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginHorizontal="@dimen/dimen_16"
            android:text="Иван Иванов • 18:30"
            android:textColor="#FFBFAB"
            android:textStyle="normal" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="160dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/poster" />
    </androidx.cardview.widget.CardView>

</LinearLayout>